<p style="color: green"><%= notice %></p>

<h1><%= render @customer %></h1>

<%= form_tag subscribe_to_plan_path, method: :post do %>
  <%= hidden_field_tag :customer_id, @customer.id %>
  <div class="field">
    <h2>Subscribe to Unlimited hour plan</h2>
  </div>

  <div class="actions">
    <%= submit_tag 'Subscribe' %>
  </div>
<% end %>


<div>
  <%= link_to "Edit this customer", edit_customer_path(@customer) %> |
  <%= link_to "Back to customers", customers_path %>

  <%= button_to "Destroy this customer", @customer, method: :delete %>
</div>
